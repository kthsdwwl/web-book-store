<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="control-group">
	<%= f.label :name, class: "control-label" %>
	<div class="controls">
		<%= f.text_field :name, class: "input-xlarge" %>
	</div>
</div>

<div class="control-group">
	<%= f.label :password, 'Password', class: "control-label" %>
	<div class="controls">
		<%= f.password_field :password, class: "input-xlarge" %>
	</div>
</div>

<div class="control-group">
	<%= f.label :password_confirmation, 'Confirm', class: "control-label" %>
	<div class="controls">
		<%= f.password_field :password_confirmation, class: "input-xlarge" %>
	</div>
</div>

<%= f.text_field :permission, value: 0, type: "hidden" %>

<div class="actions form-actions">
	<%= f.submit class: "btn btn-primary" %>
</div>
<% end %>
