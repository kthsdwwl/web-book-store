<h1><%= t('.page_title') %></h1>
<% if notice %>
<div class="alert alert-error">
	<p id="notice">
		<%= notice %>
	</p>
</div>
<% end %>

<table class="table table-hover blur">
	<thead>
		<tr>
			<th><%= t('.name') %></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= link_to t('.show'), user %></td>
			<td><%= link_to t('.edit'), edit_user_path(user) %></td>
			<td><%= link_to t('.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

