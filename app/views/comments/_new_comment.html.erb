<% @comment = Comment.new %>
<%= form_for @comment, remote: true do |f| %>

<div class="alert alert-error" id="comment_alert" style="display: none">
	<p>
		<strong>Alert </strong>comment should not be empty
	</p>
</div>

<div class="alert alert-info" id="comment_info" style="display: none">
	<p>
		<strong>Infomation </strong>send comment success
	</p>
</div>

<% if session[:user_id] == nil %>
<div class="alert alert-info">
	<strong>Information </strong>you should login first before sending comment
</div>

<% else %>
<div class="field">
	<%= f.text_area :content, rows: 3, class: "span12", placeholder: "enter comment", id: "comment_text" %>
</div>
<input type="text" id="comment_user_id" name="comment[user_id]" value="<%= session[:user_id] %>" style="display: none" />
<input type="text" id="comment_product_id" name="comment[product_id]" value="<%= product_id %>" style="display: none" />
<div class="actions">
	<%= f.submit class: "btn btn-primary pull-right" %>
</div>
<% end %>
<% end %>
